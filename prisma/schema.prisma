// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  name          String
  email         String     @unique
  role          RoleStatus @default(HOUSE_RENTER)
  contactNumber String
  password      String
  profileImage  String?
  address       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum RoleStatus {
  ADMIN
  HOUSE_OWNER
  HOUSE_RENTER
}
